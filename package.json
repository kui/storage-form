{
  "name": "storage-form",
  "version": "2.0.0",
  "description": "Custom element to use <form> as storages such as localStorage, chrome.storage.",
  "type": "module",
  "exports": "./js/storage-form.js",
  "scripts": {
    "build": "tsc --project ts",
    "docs": "npm run build && cp -vur js ts docs",
    "test": "jest",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:ts": "tsc --noEmit --project src",
    "lint": "run-p lint:*",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier --write .",
    "fix": "run-p fix:*",
    "clean": "rm -fr js types dist",
    "serve-docs": "npx http-server -c=-1 docs"
  },
  "keywords": [
    "web",
    "web-components",
    "custom-elements",
    "stroage",
    "web-stroage",
    "chrome-storage"
  ],
  "author": "Keiichiro Ui",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^13.24.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "engine": {
    "node": "^20.x"
  },
  "repository": "https://github.com/kui/storage-form.git"
}
