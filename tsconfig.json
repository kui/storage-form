{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "Node16",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "docs", "dist", "lib"]
}
